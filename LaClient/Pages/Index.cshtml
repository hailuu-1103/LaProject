<style>
	.display-table{
		display: flex;
		gap: 20px;
	}
	.img-top{
	    width: 12vh;
	    height: 12vh;
	}
</style>
<body>
<!-- CONTENT -->
<section id="content">
    <!-- MAIN -->
    <main>
        <!-- Title -->
        <div class="head-title">
            <div class="left">
                <h1>Dashboard</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <i class='bx bx-chevron-right'></i>
                    </li>
                    <li>
                        <a class="active" href="#">Collections</a>
                    </li>
                </ul>
            </div>
            <a href="#" class="btn-download">
                <i class='bx bxs-cloud-download'></i>
                <span class="text">Download</span>
            </a>
        </div>

        <!-- Overall infor -->
        <ul class="box-info" style="padding-left: 0">
            <li>
                <img class="img-top" src="@Model.TopReturnNftCollectionDto!.image_url" alt=""/>
                <span class="text">
                    <h3>@Model.TopReturnNftCollectionDto!.name</h3>
                    <p>Top Return</p>
                </span>
            </li>
            <li>
                <img class="img-top" src="@Model.TopOwnerNftCollectionDto!.image_url" alt=""/>
                <span class="text">
                    <h3>@Model.TopOwnerNftCollectionDto!.stats.num_owners</h3>
                    <p>Top Unique Owner</p>
                </span>
            </li>
            <li>
                <img class="img-top" src="@Model.TopSaleNftCollectionDto!.image_url" alt=""/>
                <span class="text">
                    <h3>@Model.TopSaleNftCollectionDto!.stats.total_sales</h3>
                    <p>Top Sale</p>
                </span>
            </li>
        </ul>

        <!-- Main data -->
        <div class="table-data display-table">
            <div class="order">
                <div class="head">
                    <div class="head">
                        <h3>Top Ranking</h3>
                        <i class='bx bx-search'></i>
                        <i class='bx bx-filter'></i>
                    </div>
                    <i class='bx bx-search'></i>
                    <i class='bx bx-filter'></i>
                </div>

                <table style="margin-top: -20px">
                    <thead>
                    <tr>
                        <th>Project</th>
                        <th>Ranking</th>
                        <th>Return Score</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.NftCollectionDto!.Count; i++)
                    {
                        var nftModel = Model.NftCollectionDto[i];
                        if (i < 5)
                        {
                            <tr>
                                <td>
                                    <img src="@nftModel.image_url">
                                    <a asp-page="DetailedCollection" asp-route-collection="@nftModel.id">@nftModel.name</a>
                                </td>
                                <td>@(i + 1)</td>
                                <td>
                                    <span class="status pending">@nftModel.nft_collection_return.ToString("F2")</span>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
            <div class="order">
                <div class="head">
                    <h3>Top Ranking</h3>
                    <!-- <i class='bx bx-search'></i>
                    <i class='bx bx-filter'></i> -->
                </div>
                <table>
                    <thead>
                    <tr>
                        <th>Project</th>
                        <th>Ranking</th>
                        <th>Return Score</th>
                    </tr>
                    </thead>
                    <tbody>
                    @for (var i = 0; i < Model.NftCollectionDto.Count; i++)
                    {
                        var nftModel = @Model.NftCollectionDto[i];
                        if (i >= 5)
                        {
                            <tr>
                                <td>
                                    <img src="@nftModel.image_url">
                                    <a asp-page="DetailedCollection" asp-route-collection="@nftModel.id">@nftModel.name</a>
                                </td>
                                <td>@(i + 1)</td>
                                <td>
                                    <span class="status pending">@nftModel.nft_collection_return.ToString("F2")</span>
                                </td>
                            </tr>
                        }
                    }
                    </tbody>
                </table>
            </div>
